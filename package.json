{
  "name": "fastify-bank-service",
  "version": "1.0.0",
  "description": "A robust and secure banking service built with Fastify",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --ignore-watch .env --transpile-only src/app.ts",
    "test": "tap test/**/*-test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.0.4",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/redis": "^7.0.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "5.2.1",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@prisma/client": "^6.3.1",
    "@sinclair/typebox": "^0.34.21",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.8",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "env-var": "^7.5.0",
    "fastify": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.13.2",
    "@types/tap": "^15.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "prettier": "^3.5.1",
    "prisma": "^6.3.1",
    "tap": "^21.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "tap": {
    "reporter": "@tapjs/reporter",
    "coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": 80
  }
}
